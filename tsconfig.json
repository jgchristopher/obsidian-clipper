{
	"extends": "@tsconfig/svelte/tsconfig.json",
	"compilerOptions": {
		"baseUrl": ".",
		"inlineSources": true,
		"module": "ESNext",
		"target": "es2021",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"strictNullChecks": true,
		"lib": ["DOM", "ES2021"],
		"types": ["svelte", "node"]
	},
	"include": ["**/*.ts", "**/*.svelte"]
}
